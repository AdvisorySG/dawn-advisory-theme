{
    "name": "dawn-advisory-theme",
    "description": "Dawn theme for Ghost, adapted for Advisory SG.",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=5.0.0",
        "node": "20.x"
    },
    "license": "MIT",
    "author": {
        "name": "Ghost Foundation",
        "email": "hello@ghost.org",
        "url": "https://ghost.org"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "config": {
        "posts_per_page": 12,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 400
            },
            "m": {
                "width": 750
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1140
            },
            "xxl": {
                "width": 1920
            }
        },
        "custom": {
            "title_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Modern sans-serif"
            },
            "body_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Modern sans-serif"
            },
            "show_featured_posts": {
                "type": "boolean",
                "default": false,
                "group": "homepage"
            },
            "home_starter_image": {
                "type": "text",
                "default": "https://advisorysg-ghost.s3.ap-southeast-1.amazonaws.com/static/home/starter/home-starter.png",
                "group": "homepage"
            },
            "home_impact_image": {
                "type": "text",
                "default": "https://advisorysg-ghost.s3.ap-southeast-1.amazonaws.com/static/home/impact/d77729fa71e7f9b912fde6a591e82afa.jpg",
                "group": "homepage"
            },
            "show_share_links": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "show_author": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "show_excerpt": {
                "type": "boolean",
                "default": false,
                "group": "post"
            },
            "show_related_posts": {
                "type": "boolean",
                "default": true,
                "group": "post"
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "prepare": "husky",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.18",
        "cssnano": "^7.0.5",
        "eslint": "^9.21.0",
        "gscan": "^4.42.0",
        "gulp": "^4.0.2",
        "gulp-livereload": "^4.0.2",
        "gulp-postcss": "^10.0.0",
        "gulp-zip": "^5.1.0",
        "husky": "^9.0.11",
        "postcss": "^8.4.35",
        "postcss-easy-import": "^4.0.0",
        "prettier": "^3.3.3",
        "pretty-quick": "^4.0.0",
        "pump": "^3.0.0",
        "webpack-stream": "^7.0.0"
    },
    "browserslist": [
        "defaults"
    ],
    "dependencies": {
        "@glidejs/glide": "^3.5.2",
        "alpinejs": "^3.12.3",
        "fitvids": "^2.1.1",
        "flowbite": "^2.4.1",
        "infinite-scroll": "^4.0.1",
        "jquery": "^3.6.0",
        "lazysizes": "^5.3.2",
        "tailwindcss": "^3.0.7",
        "webpack": "^5.70.0"
    }
}
