{
    "name": "dawn-advisory-theme",
    "description": "Dawn theme for Ghost, adapted for Advisory SG.",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=5.0.0",
        "node": "18.x"
    },
    "license": "MIT",
    "author": {
        "name": "Ghost Foundation",
        "email": "hello@ghost.org",
        "url": "https://ghost.org"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "config": {
        "posts_per_page": 12,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 400
            },
            "m": {
                "width": 750
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1140
            },
            "xxl": {
                "width": 1920
            }
        },
        "custom": {
            "title_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Modern sans-serif"
            },
            "body_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Modern sans-serif"
            },
            "show_featured_posts": {
                "type": "boolean",
                "default": false,
                "group": "homepage"
            },
            "featured_title": {
                "type": "text",
                "default": "Featured articles",
                "group": "homepage"
            },
            "show_share_links": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "show_author": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "show_excerpt": {
                "type": "boolean",
                "default": false,
                "group": "post"
            },
            "show_related_posts": {
                "type": "boolean",
                "default": true,
                "group": "post"
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "prepare": "husky install",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "autoprefixer": "10.4.14",
        "cssnano": "6.0.1",
        "eslint": "^8.2.0",
        "gscan": "4.38.0",
        "gulp": "4.0.2",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.1",
        "gulp-zip": "5.1.0",
        "husky": "^8.0.1",
        "postcss": "8.4.30",
        "postcss-easy-import": "4.0.0",
        "prettier": "^2.4.1",
        "pretty-quick": "^3.1.2",
        "pump": "3.0.0",
        "webpack-stream": "^7.0.0"
    },
    "browserslist": [
        "defaults"
    ],
    "dependencies": {
        "@glidejs/glide": "^3.5.2",
        "alpinejs": "^3.12.3",
        "fitvids": "^2.1.1",
        "infinite-scroll": "^4.0.1",
        "jquery": "^3.6.0",
        "lazysizes": "^5.3.2",
        "tailwindcss": "^3.0.7",
        "webpack": "^5.70.0"
    }
}
