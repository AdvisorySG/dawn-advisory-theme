<article class="feed-card {{post_class}} rounded-lg ring-1 ring-gray-900/5 shadow-xl m-auto max-w-2xl sm:max-w-none">
    <div onclick="location.href='{{url}}'" class="flex flex-col cursor-pointer h-full rounded-xl overflow-hidden sm:flex-row sm:h-60 lg:flex-col lg:h-full ">
        {{#if feature_image}}
        <img class="object-cover m-0 w-full h-72 sm:min-w-[40%] sm:max-w-[40%] sm:h-full lg:w-full lg:max-w-full lg:h-60" src="{{img_url feature_image}}" alt="{{title}}" />
        {{else}} {{!-- Placeholder --}}
        <img class="object-cover m-0 hidden sm:block sm:min-w-[40%] sm:max-w-[40%] sm:h-full lg:w-full lg:max-w-full lg:h-60" src="https://via.placeholder.com/100/FFFFFF/FFFFFF" alt="{{title}}" />
        {{/if}}
        <div class="flex-grow bg-white px-3 pt-3 pb-5 relative">
            {{#if primary_tag}}
                {{#primary_tag}}
                    <span class="single-meta-item single-meta-tag">
                        <a class="post-tag post-tag-{{slug}} text-lg uppercase font-extrabold" href="{{url}}">
                            {{name}}
                        </a>
                    </span>
                {{/primary_tag}}
            {{else}}
                <p class="text-xl my-1">[No tag]</p>
            {{/if}}
            <p class="text-2xl font-bold my-2">{{title}}</p>
            <p class="text-xl my-1 line-clamp-4">{{excerpt}}</p>
            <div class="h-8"></div>
            <div class="text-xl absolute right-4 bottom-4">
                <i class="far fa-clock"></i>
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date published_at format="D MMM YYYY"}}</time>
            </div>
        </div>
    </div>
</article>
